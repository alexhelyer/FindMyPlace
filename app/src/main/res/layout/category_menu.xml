<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingVertical="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_restaurant"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_restaurant_black_24dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#DDD"/>

        <ImageView
            android:id="@+id/ic_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_local_bar_black_24dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#DDD"/>

        <ImageView
            android:id="@+id/ic_cafe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_local_cafe_black_24dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#DDD"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_hotel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_hotel_black_24dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#DDD"/>

        <ImageView
            android:id="@+id/ic_gas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_local_gas_station_black_24dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#DDD"/>

        <ImageView
            android:id="@+id/ic_flight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_flight_black_24dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#DDD"/>

    </LinearLayout>

</LinearLayout>